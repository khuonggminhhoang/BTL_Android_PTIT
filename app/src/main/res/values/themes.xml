<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- THAY ĐỔI PARENT Ở ĐÂY -->
    <style name="Base.Theme.FoodOrderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Ví dụ: Bạn có thể cần định nghĩa lại các màu chính nếu muốn -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Thay bằng màu chính của bạn -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Thay bằng màu phụ của bạn -->
        <item name="colorOnPrimary">@color/white</item> <!-- Màu chữ/icon trên nền màu chính -->

        <item name="colorSecondary">@color/teal_200</item> <!-- Thay bằng màu accent của bạn -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Màu chữ/icon trên nền màu accent -->

        <!-- Màu nền và màu chữ/icon trên nền -->
        <item name="android:colorBackground">@color/white</item> <!-- Hoặc màu nền bạn muốn -->
        <item name="colorSurface">@color/white</item> <!-- Màu cho các bề mặt như Card, Dialog -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@color/white</item>

        <!-- Màu thanh trạng thái (status bar) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize other theme attributes here -->
    </style>

    <!-- Theme chính kế thừa từ Base đã sửa -->
    <style name="Theme.FoodOrderApp" parent="Base.Theme.FoodOrderApp" />

    <!-- Style OtpEditTextStyle giữ nguyên -->
    <style name="OtpEditTextStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/otp_box_selector</item> <!-- Đảm bảo drawable này tồn tại -->
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/grey</item> <!-- Đảm bảo màu này tồn tại -->
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
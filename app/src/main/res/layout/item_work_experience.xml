<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_company_icon_exp_item"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_building"
        android:background="#E6F4FF"
        android:padding="6dp"
        app:tint="@color/blue_primary"
        android:contentDescription="Company Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tv_job_title_exp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="UI/UX Designer"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_company_name_exp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Facebook"
            android:textSize="14sp"
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/tv_duration_exp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jan 2018 - 3 years 8 month"
            android:textSize="12sp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_edit_exp_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_edit"
        android:layout_gravity="center_vertical"
        app:tint="@color/blue_primary"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="Edit Experience"/>
</LinearLayout>
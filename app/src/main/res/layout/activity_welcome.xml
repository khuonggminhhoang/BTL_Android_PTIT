<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.welcome.ui.activity.WelcomeActivity"
    >

    <ImageView
        android:id="@+id/imgfindJob"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/find_job_img"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgfindJob"
        tools:layout_editor_absoluteX="38dp"
        android:paddingLeft="30dp"
        />

    <TextView
        android:id="@+id/tvContentWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:text="Tìm kiếm các vị trí tuyển dụng từ các công ty hàng đầu và tìm kiếm sự nghiệp mơ ước của bạn!"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/welcomeBtnAuth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContentWelcome"
        >

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_outline"
            android:textAllCaps="false"
            android:text="Đăng ký"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_outline"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Đăng nhập" />
    </LinearLayout>
    <Button
        android:id="@+id/btnStartExploring"
        android:text="Khám phá"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/welcomeBtnAuth"
        android:textStyle="bold"
        android:background="@drawable/btn_solid"
        android:textAllCaps="false"
        android:layout_margin="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>